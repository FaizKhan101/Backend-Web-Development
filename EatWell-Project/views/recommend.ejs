<%- include("./includes/head") %>
    <link rel="stylesheet" href="/styles/recommend.css" />

  </head>
  <body>
    <%- include("./includes/header") %>
    <main>
      <h1>Share your favorite restaurant!</h1>
      <form action="/recommend" method="POST">
        <div class="form-control">
          <label for="name">Restaurant name</label>
          <input type="text" name="name" id="name">
        </div>
        <div class="form-control">
          <label for="address">Address</label>
          <input type="text" name="address" id="address">
        </div> 
        <div class="form-control">
          <label for="type">Type of cuisine</label>
          <input type="text" name="type" id="type" placeholder="e.g. Chinese">
        </div>
        <div class="form-control">
          <label for="website">Restaurant Website</label>
          <input type="text" name="website" id="website">
        </div>
        <div class="form-control">
          <label for="description">Description</label>
          <textarea name="description" id="description" rows="5"></textarea>
        </div>
        <div class="form-action">
          <button type="submit">Share Restaurant</button>
        </div>
      </form>
    </main>
<%- include("./includes/footer") %>
